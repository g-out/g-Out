<div class="row justify-content-md-center">
  <div class="col-xs-12 col-sm-12 col-md-4">
    <form action="/local" method="POST">
      <div class="form-group">
        <div class="custom-fi">
          <label class="custom-file-ll" for="nombre">Name</label>
          <input type="text" class="name" name="name">
          <label class="custom-file-bel" for="address">Address</label>
          <input type="text" class="address" name="address">
          <label class="custom-file-bel" for="phone">Phone</label>
          <input type="number" class="phone" name="phone">
          {{!-- <input type="text" class="cat"> --}}
        </div>
        <label for="">Category</label>
        <select name="food" id="">
            {{#each foods as |food|}}
            <option value="{{food}}">{{food}}</option>
            {{/each}}
        </select>
        <select name="music" id="">
          {{#each musics as |music|}}
          <option value="{{music}}">{{music}}</option>
          {{/each}}
        </select>
        <div>
          <label class="custom-file-bel" for="phone">localType</label>
          <select name="localType" id="">
            {{#each places as |place|}}
            <option value="{{place}}">{{place}}</option>
            {{/each}}
          </select>
        </div>
      </div>
      <div class="form-actions">
        <button type="submit" class="btn btn-primary btn-block">Create</button>
      </div>
    </form>
  </div>
</div>