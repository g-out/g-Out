<div class="row justify-content-md-center">
  <div class="col-md-4 form-profile">
    {{#if session.avatarURL}}
    <div class="text-center mb-2 img-profile">
      <img src="{{ session.avatarURL }}" class="img-fluid rounded" alt="{{ user.name }}">
    </div>
    {{/if}}
    <form action="/profile" method="POST" enctype="multipart/form-data" class="datos-profile">
      {{>user/profile user=session errors=errors edit=true}}
      <div class="form-group">
        <div class="custom-file">
          <input type="file" class="custom-file-input" name="avatar" id="avatar">
          <label class="custom-file-label" for="avatar">Choose avatar</label>
        </div>
      </div>
      <div class="form-actions">
        <button type="submit" class="btn btn-blue text-primary btn-block">Save profile</button>
      </div>
    </form>
  </div>
</div>